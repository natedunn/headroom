{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@codegen": [
        "src/lib/graphql/_generated.ts"
      ],
      "@root/*": [
        "*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@hooks/*": [
        "src/lib/hooks/*"
      ],
      "@queries/*": [
        "src/lib/queries/*"
      ],
      "@queries": [
        "src/lib/queries/index.ts"
      ],
      "@mutations/*": [
        "src/lib/mutations/*"
      ],
      "@mutations": [
        "src/lib/mutations/index.ts"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@layouts": [
        "src/components/layouts/index.tsx"
      ],
      "@assets/*": [
        "public/assets/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
