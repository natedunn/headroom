---
import Layout from '../layouts/Layout.astro';
import { client } from '@client';

let data = await client.posts.query();
const posts = data?.posts?.data || [];
---

<Layout title='Posts'>
  <div class='p-4'>
    {
      posts.map((post) => {
        return (
          <>
            <div>
              <h1 class='text-2xl'>Title: {post?.title}</h1>
              <div class='mt-2'>{post?.body}</div>
            </div>
            <br />
          </>
        );
      })
    }
  </div>
</Layout>
